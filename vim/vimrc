syntax enable

set softtabstop=4
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab

set ai
set si
set wrap

nnoremap <SPACE> <Nop>
let mapleader=" "

function! Preserve(command)
    let winview = winsaveview()
    execute a:command
    call winrestview(winview)
endfunction

nmap <leader>$ :call Preserve("%s/\\s\\+$//e")<CR>
nmap <leader>= :call Preserve("normal gg=G")<CR>

set list listchars=tab:>-,trail:Â·,extends:>

